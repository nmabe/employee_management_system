<% provide(:title, "Update")%>
<h1>Update Employee Details</h1>

<div class="row">
    <div class ="col-md-6 col-md-offset-3">
        <%= form_for(@employee) do |f|%>

            <%= render 'shared/error_messages' %>
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>

            <%= f.label :dob, "Date of Birth "%>
            <%= f.date_field :dob, class: "form-control" %>

            <%= f.label :email %>
            <%= f.text_field :email, class: "form-control" %>

            <%= f.label :address %>
            <%= f.text_area :address, class: "form-control" %>

            <%= f.label :gender %>
            <%= f.select :gender, ['Female','Male'], class: "form-control" %>

            <%= f.label :job_id, "Job ID"%>
            <%= f.text_field :job_id, class: "form-control" %>

            <%= f.submit "Update Details", class: "btn btn-primary "%>
        <% end %>
    </div>
</div>